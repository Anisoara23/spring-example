<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="csvFileBankReader" class="org.springframework.batch.item.file.FlatFileItemReader">
        <property name="linesToSkip" value="1"/>
        <property name="resource" value="classpath:data/input/banks.csv"/>
        <property name="lineMapper" ref="bankLineMapper"/>
    </bean>
    <bean id="bankLineMapper" class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
        <property name="lineTokenizer" ref="bankTokenizer"/>
        <property name="fieldSetMapper" ref="bankFieldSetMapper"/>
    </bean>
    <bean id="bankTokenizer" class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
        <property name="names">
            <array value-type="java.lang.String">
                <value>code</value>
                <value>name</value>
                <value>country</value>
                <value>city</value>
                <value>street</value>
                <value>postal_code</value>
            </array>
        </property>
    </bean>
    <bean id="bankFieldSetMapper" class="org.example.batch.setmapper.BankFieldSetMapper"/>

    <bean id="csvFileCustomerReader" class="org.springframework.batch.item.file.FlatFileItemReader">
        <property name="linesToSkip" value="1"/>
        <property name="resource" value="classpath:data/input/customers.csv"/>
        <property name="lineMapper" ref="customerLineMapper"/>
    </bean>
    <bean id="customerLineMapper" class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
        <property name="lineTokenizer" ref="customerTokenizer"/>
        <property name="fieldSetMapper" ref="customerFieldSetMapper"/>
    </bean>
    <bean id="customerTokenizer" class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
        <property name="names">
            <array value-type="java.lang.String">
                <value>id</value>
                <value>first_name</value>
                <value>last_name</value>
                <value>email</value>
                <value>birth_date</value>
                <value>idnp</value>
                <value>phone_number</value>
                <value>country</value>
                <value>city</value>
                <value>street</value>
                <value>postal_code</value>
                <value>citizenship</value>
                <value>gender</value>
                <value>occupation</value>
            </array>
        </property>
    </bean>
    <bean id="customerFieldSetMapper" class="org.example.batch.setmapper.CustomerFieldSetMapper"/>

    <bean id="dbCustomerReader" class="org.springframework.batch.item.database.JdbcCursorItemReader">
        <property name="dataSource" ref="dataSource"/>
        <property name="sql" value="${selectCustomerStatement}"/>
        <property name="rowMapper">
            <bean id="customerRowMapper" class="org.example.batch.rowmapper.CustomerRowMapper"/>
        </property>
    </bean>
</beans>