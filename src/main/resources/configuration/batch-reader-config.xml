<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="csvFileItemReader" class="org.springframework.batch.item.file.FlatFileItemReader">
        <property name="linesToSkip" value="1"/>
        <property name="resource" value="classpath:data/banks.csv"/>
        <property name="lineMapper" ref="lineMapper"/>
    </bean>
    <bean id="lineMapper" class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
        <property name="lineTokenizer" ref="tokenizer"/>
        <property name="fieldSetMapper" ref="bankFieldSetMapper"/>
    </bean>
    <bean id="tokenizer" class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
        <property name="names">
            <array value-type="java.lang.String">
                <value>code</value>
                <value>name</value>
                <value>country</value>
                <value>city</value>
                <value>street</value>
                <value>postal_code</value>
            </array>
        </property>
    </bean>
    <bean id="bankFieldSetMapper" class="org.example.batch.BankFieldSetMapper"/>
</beans>